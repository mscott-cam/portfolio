---
import ContactButton, { styles } from "./ContactButton.astro";
---

<div class="button-group">
  <ContactButton url="https://www.linkedin.com/in/m-scott-cameron/">
    <svg
      width="100%"
      height="100%"
      class="group-hover:stroke-black"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><path
        d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
      ></path><rect width="4" height="12" x="2" y="9"></rect><circle
        cx="4"
        cy="4"
        r="2"></circle></svg
    >
  </ContactButton>
  <ContactButton url="https://github.com/mscott-cam">
    <svg
      width="100%"
      height="100%"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="group-hover:stroke-black"
      ><path
        d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
      ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
    >
  </ContactButton>
  <ContactButton url="mailto:hello@mscottcameron.co">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="100%"
      height="100%"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="group-hover:stroke-black"
      ><line x1="22" x2="11" y1="2" y2="13"></line><polygon
        points="22 2 15 22 11 13 2 9 22 2"></polygon></svg
    >
  </ContactButton>
  <button class={`${styles} copy-button active:scale-90`}>
    <p
      class="tooltip text-xl absolute -right-4 bottom-20 md:right-20 md:bottom-1 rounded-lg opacity-0 show-hide"
    >
      Email copied!
    </p>
    <svg
      width="100%"
      height="100%"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="group-hover:stroke-black"
      ><rect width="16" height="13" x="6" y="4" rx="2"></rect><path
        d="m22 7-7.1 3.78c-.57.3-1.23.3-1.8 0L6 7"></path><path
        d="M2 8v11c0 1.1.9 2 2 2h14"></path></svg
    >
  </button>
</div>

<style>
  .button-group {
    @apply max-w-full grid grid-cols-4 place-items-center gap-1
      md:fixed md:grid-cols-1 right-4 bottom-4 md:w-12 md:bg-transparent md:shadow-none;
  }
  .show-hide {
    transition: opacity 200ms ease-in;
  }
</style>

<script>
  const button = document.querySelector(".copy-button");
  const tooltip = document.querySelector(".tooltip");
  button?.addEventListener("click", () => {
    navigator.clipboard.writeText("hello@mscottcameron.com");
    tooltip?.classList.add("opacity-100");
    setTimeout(() => tooltip?.classList.remove("opacity-100"), 1000);
  });
</script>
