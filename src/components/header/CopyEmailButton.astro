<button
  class="inline-block relative copy-button w-16 bg-neutral-200 shadow-md p-3 rounded-xl hover:bg-neutral-300 group active:scale-90"
>
  <p
    class="opacity-0 tooltip text-xl absolute -right-4 bottom-20 md:right-20 md:bottom-1 bg-neutral-300 rounded-lg show-hide"
  >
    Email copied!
  </p>
  <svg
    width="100%"
    height="100%"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="group-hover:stroke-black"
    ><rect width="16" height="13" x="6" y="4" rx="2"></rect><path
      d="m22 7-7.1 3.78c-.57.3-1.23.3-1.8 0L6 7"></path><path
      d="M2 8v11c0 1.1.9 2 2 2h14"></path></svg
  >
</button>

<style>
  .show-hide {
    opacity: 0;
    transition: opacity 200ms ease-in;
  }
  .show-hide:active {
    opacity: 1;
  }
</style>

<script>
  const button = document.querySelector(".copy-button");
  const tooltip = document.querySelector(".tooltip");
  button?.addEventListener("click", () => {
    navigator.clipboard.writeText("hello@mscottcameron.com");
    tooltip?.classList.add("opacity-100");
    setTimeout(() => tooltip?.classList.remove("opacity-100"), 1000);
  });
</script>
